{
  "name": "crackle",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "%packages": "pnpm --filter='@crackle/*'",
    "%fixtures": "pnpm --filter='@crackle-fixtures/*' --aggregate-output",
    "bootstrap": "pnpm %packages exec crackle-bootstrap package --fix",
    "dev": "pnpm --aggregate-output %packages dev",
    "build": "pnpm --aggregate-output %packages build",
    "build:ci": "wireit",
    "format": "wireit",
    "format:eslint": "eslint --cache --fix .",
    "format:prettier": "wireit",
    "lint": "wireit",
    "lint:eslint": "wireit",
    "lint:prettier": "wireit",
    "lint:tsc": "wireit",
    "test": "pnpm test:unit:ci && pnpm test:integration:ci && pnpm test:playwright",
    "test:unit": "vitest",
    "test:unit:ci": "pnpm test:unit --run",
    "test:integration": "wireit",
    "test:integration:ci": "pnpm test:integration -- --run",
    "test:playwright": "wireit",
    "test:braid": "pnpm fixtures:braid --test",
    "fixtures:add": "tsx ./scripts/add-fixture.ts",
    "fixtures:braid": "tsx ./scripts/braid-fixture.ts",
    "fixtures:dev": "pnpm %fixtures dev",
    "fixtures:package": "pnpm %fixtures package",
    "sync:dependencies": "pnpm --recursive sync:dependencies && pnpm install",
    "sync:prettierignore": "ignore-sync .prettierignore-sync",
    "sync:eslintignore": "ignore-sync .eslintignore-sync",
    "changeset": "changeset",
    "prepare-publish": "pnpm build:ci",
    "release": "pnpm prepare-publish && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@crackle-private/bootstrap": "workspace:*",
    "@crackle/cli": "workspace:*",
    "@crackle/core": "workspace:*",
    "@playwright/test": "^1.32.0",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-config-seek": "^11.3.1",
    "ignore-sync": "^7.0.1",
    "prettier": "^2.8.8",
    "tsx": "^3.12.7",
    "typescript": "~5.1.6",
    "vitest": "^0.33.0",
    "webpack": "^5.79.0",
    "wireit": "^0.10.0"
  },
  "packageManager": "pnpm@8.5.1",
  "volta": {
    "node": "18.16.0"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "sku"
    ],
    "patchedDependencies": {
      "sync-dependencies@1.0.4": "patches/sync-dependencies@1.0.4.patch"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "jest",
        "sku"
      ]
    },
    "overrides": {
      "tsm>esbuild": "^0.18.10"
    }
  },
  "wireit": {
    "build:ci": {
      "command": "pnpm build",
      "dependencies": [
        "bootstrap"
      ]
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier"
      ]
    },
    "format:prettier": {
      "command": "prettier --cache --write .",
      "dependencies": [
        "sync:prettierignore"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier",
        "lint:tsc"
      ]
    },
    "lint:eslint": {
      "command": "eslint --cache .",
      "dependencies": [
        "sync:eslintignore"
      ]
    },
    "lint:prettier": {
      "command": "prettier --cache --check .",
      "dependencies": [
        "sync:prettierignore"
      ]
    },
    "lint:tsc": {
      "command": "tsc --noEmit",
      "dependencies": [
        "fixtures:dev",
        "./scripts:lint:tsc"
      ]
    },
    "test:integration": {
      "command": "vitest --config vitest.config.integration.ts",
      "dependencies": [
        "fixtures:dev"
      ]
    },
    "test:playwright": {
      "command": "playwright test",
      "dependencies": [
        "fixtures:package"
      ]
    }
  }
}
