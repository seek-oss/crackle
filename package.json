{
  "name": "project-crackle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "lint": "tsc --noEmit && eslint packages fixtures && prettier --check packages fixtures",
    "format": "eslint --fix packages fixtures && prettier --write packages fixtures",
    "test": "yarn test:jest && yarn test:playwright",
    "test:jest": "jest",
    "test:playwright": "playwright test",
    "release": "yarn build && changeset publish",
    "dev-fixtures": "node scripts/dev-fixtures.js"
  },
  "workspaces": [
    "packages/*",
    "fixtures/*",
    "fixtures/monorepo/packages/*",
    "fixtures/monorepo/site"
  ],
  "dependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/cli": "^2.17.0",
    "@playwright/test": "^1.14.1",
    "@preconstruct/cli": "^2.0.4",
    "@types/jest": "^27.0.2",
    "braid-design-system": "file:.yalc/braid-design-system",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.0"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.11"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.1",
    "eslint": "^7.32.0",
    "eslint-config-seek": "^7.0.8"
  }
}
