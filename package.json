{
  "name": "crackle",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm filter:crackle exec crackle-bootstrap package --fix",
    "_bootstrap": "pnpm filter:crackle exec crackle-bootstrap package --fix",
    "filter:crackle": "pnpm --recursive --filter='@crackle/*'",
    "filter:fixtures": "pnpm --recursive --filter='./fixtures/*'",
    "turbo:crackle": "turbo --filter='@crackle/*'",
    "turbo:root": "turbo --filter=//",
    "dev": "pnpm filter:crackle dev",
    "_dev": "pnpm turbo:crackle dev",
    "build": "pnpm filter:crackle build",
    "_build": "pnpm turbo:crackle build",
    "_format": "turbo format",
    "format:eslint": "eslint --fix --cache .",
    "format:prettier": "prettier --write --cache .",
    "lint": "wireit",
    "_lint": "turbo lint",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --cache --check .",
    "lint:tsc": "tsc --noEmit",
    "test": "wireit",
    "_test": "turbo test",
    "test:vitest": "vitest",
    "test:vitest:ci": "vitest --run",
    "test:playwright": "playwright test",
    "add-fixture": "tsx ./scripts/add-fixture.ts",
    "sync-dependencies": "pnpm --recursive sync-dependencies",
    "release": "pnpm bootstrap && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@crackle-dev/bootstrap": "workspace:*",
    "@crackle/cli": "workspace:*",
    "@crackle/core": "workspace:*",
    "@playwright/test": "1.22.2",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.2.0",
    "enquirer": "^2.3.6",
    "eslint": "^8.25.0",
    "eslint-config-seek": "^10.1.3",
    "fast-glob": "^3.2.12",
    "fixturez": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "snapshot-diff": "^0.10.0",
    "tsx": "^3.12.1",
    "turbo": "^1.8.4",
    "typescript": "~4.9.4",
    "unbuild": "^1.0.2",
    "vitest": "^0.26.1",
    "wireit": "^0.9.2"
  },
  "packageManager": "pnpm@7.29.1",
  "volta": {
    "node": "18.12.1"
  },
  "wireit": {
    "build": {
      "command": "pnpm crackle --aggregate-output build"
    },
    "dev": {
      "command": "pnpm crackle --aggregate-output dev"
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier",
        "lint:tsc"
      ]
    },
    "test": {
      "dependencies": [
        "test:vitest:ci",
        "test:playwright"
      ]
    }
  }
}
