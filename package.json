{
  "name": "crackle",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "fix": "preconstruct fix",
    "dev": "wireit",
    "build": "wireit",
    "watch": "wireit",
    "packages": "pnpm --recursive --filter='@crackle/*'",
    "format": "npm-run-all format:eslint format:prettier",
    "format:eslint": "eslint --fix --cache .",
    "format:prettier": "prettier --write --cache .",
    "lint": "wireit",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --cache --check .",
    "lint:tsc": "tsc --noEmit",
    "fixtures": "pnpm --recursive --filter='./fixtures/*'",
    "test": "pnpm test:vitest --run && pnpm test:playwright",
    "test:vitest": "vitest",
    "test:playwright": "playwright test",
    "add-fixture": "tsx ./scripts/add-fixture.ts",
    "sync-dependencies": "pnpm --recursive sync-dependencies",
    "release": "pnpm build && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@babel/core": "^7.19.4",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@crackle/cli": "workspace:*",
    "@playwright/test": "1.22.2",
    "@preconstruct/cli": "^2.2.2",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.2.0",
    "enquirer": "^2.3.6",
    "eslint": "^8.25.0",
    "eslint-config-seek": "^10.1.3",
    "fast-glob": "^3.2.12",
    "fixturez": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "snapshot-diff": "^0.10.0",
    "tsx": "^3.12.1",
    "typescript": "~4.9.4",
    "unbuild": "^1.0.2",
    "vitest": "^0.26.1",
    "wireit": "^0.9.2"
  },
  "packageManager": "pnpm@7.18.2",
  "volta": {
    "node": "18.12.1"
  },
  "wireit": {
    "build": {
      "command": "pnpm packages build"
    },
    "dev": {
      "command": "pnpm packages dev"
    },
    "watch": {
      "command": "pnpm packages --parallel build --watch"
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier",
        "lint:tsc"
      ]
    }
  },
  "preconstruct": {
    "___experimentalFlags_WILL_CHANGE_IN_PATCH": {
      "exports": true,
      "keepDynamicImportAsDynamicImportInCommonJS": true
    },
    "exports": true,
    "packages": [
      "packages/*"
    ]
  }
}
