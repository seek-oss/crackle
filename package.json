{
  "name": "crackle",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "%packages": "pnpm --filter='@crackle/*'",
    "%fixtures": "pnpm --filter='@crackle-fixtures/*' --aggregate-output",
    "bootstrap": "pnpm %packages exec crackle-bootstrap package --fix",
    "dev": "wireit",
    "build": "wireit",
    "format": "wireit",
    "format:eslint": "eslint --cache --fix .",
    "format:prettier": "wireit",
    "lint": "wireit",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "wireit",
    "lint:tsc": "wireit",
    "test": "wireit",
    "test:vitest": "vitest",
    "test:vitest:ci": "vitest --run",
    "test:playwright": "playwright test",
    "fixtures:add": "tsx ./scripts/add-fixture.ts",
    "fixtures:dev": "pnpm %fixtures dev",
    "sync:dependencies": "pnpm --recursive sync-dependencies && pnpm install",
    "sync:ignore": "ignore-sync .",
    "prepare-publish": "pnpm bootstrap && pnpm build",
    "release": "pnpm prepare-publish && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@crackle-dev/bootstrap": "workspace:*",
    "@crackle/cli": "workspace:*",
    "@crackle/core": "workspace:*",
    "@playwright/test": "^1.32.0",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.2.0",
    "@types/fs-extra": "^9.0.13",
    "@vitejs/plugin-react": "^3.0.0",
    "enquirer": "^2.3.6",
    "eslint": "^8.25.0",
    "eslint-config-seek": "^10.1.3",
    "fast-glob": "^3.2.12",
    "fixturez": "^1.1.0",
    "fs-extra": "^10.1.0",
    "ignore-sync": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "snapshot-diff": "^0.10.0",
    "tsx": "^3.12.1",
    "typescript": "~4.9.4",
    "unbuild": "^1.1.2",
    "vitest": "^0.28.5",
    "wireit": "^0.9.5"
  },
  "packageManager": "pnpm@7.29.1",
  "volta": {
    "node": "18.13.0"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "sku"
    ],
    "patchedDependencies": {
      "sync-dependencies@1.0.4": "patches/sync-dependencies@1.0.4.patch"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "jest",
        "sku"
      ]
    }
  },
  "wireit": {
    "build": {
      "command": "pnpm --aggregate-output %packages build"
    },
    "dev": {
      "command": "pnpm --aggregate-output %packages dev"
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier"
      ]
    },
    "format:prettier": {
      "command": "prettier --cache --write .",
      "dependencies": [
        "sync:ignore"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier",
        "lint:tsc"
      ]
    },
    "lint:prettier": {
      "command": "prettier --cache --check .",
      "dependencies": [
        "sync:ignore"
      ]
    },
    "lint:tsc": {
      "command": "tsc --noEmit",
      "dependencies": [
        "fixtures:dev"
      ]
    },
    "test": {
      "dependencies": [
        "test:vitest:ci",
        "test:playwright"
      ]
    }
  }
}
