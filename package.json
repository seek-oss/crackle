{
  "name": "project-crackle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "format": "eslint --fix . && prettier --write .",
    "test": "yarn test:vitest --run && yarn test:playwright",
    "test:vitest": "vitest",
    "test:playwright": "playwright test",
    "release": "yarn build && changeset publish",
    "dev-fixtures": "node scripts/dev-fixtures.js"
  },
  "workspaces": [
    "packages/*",
    "fixtures/*",
    "fixtures/monorepo/packages/*",
    "fixtures/monorepo/site"
  ],
  "dependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/cli": "^2.17.0",
    "@playwright/test": "^1.14.1",
    "@preconstruct/cli": "^2.2.1",
    "braid-design-system": "file:.yalc/braid-design-system",
    "prettier": "^2.3.2",
    "typescript": "~4.4.4"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "volta": {
    "node": "16.16.0",
    "yarn": "1.22.11"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.6",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.2.0",
    "eslint": "^8.21.0",
    "eslint-config-seek": "^9.0.0",
    "fixturez": "^1.1.0",
    "vitest": "^0.21.1"
  }
}
