{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "paths": {
      "~utils/*": ["./test-utils/*"]
    }
  },
  "exclude": ["node_modules", "fixtures/braid-design-system", "scripts"]
}
