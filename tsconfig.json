{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2015", "dom"],
    "target": "ES6",
    "paths": {
      "~utils/*": ["./test-utils/*"]
    },
    "types": ["./types/fixturez"]
  },
  "include": [
    "./fixtures",
    "./packages",
    "./test-utils",
    "./tests",
    "./*.ts",
    "./*.js"
  ],
  "exclude": ["./node_modules"]
}
