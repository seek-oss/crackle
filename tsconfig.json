{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "lib": ["es2015", "dom"],
    "target": "esnext",
    "paths": {
      "~utils/*": ["./test-utils/*"]
    }
  },
  "exclude": ["node_modules", "fixtures/braid-design-system", "scripts"]
}
