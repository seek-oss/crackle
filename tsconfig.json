{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["es2015"],
    "target": "es5"
  },
  "include": ["./basic-library/src"],
  "exclude": ["./node_modules"]
}
