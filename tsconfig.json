{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "target": "ES6"
  },
  "include": ["./fixtures", "./packages"],
  "exclude": ["./node_modules"]
}
