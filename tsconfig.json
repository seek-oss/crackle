{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2015", "dom"],
    "target": "ES6",
    "types": ["vitest/globals"]
  },
  "include": ["./fixtures", "./packages", "./tests"],
  "exclude": ["./node_modules"]
}
