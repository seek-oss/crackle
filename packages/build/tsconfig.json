{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "es2015"],
    "target": "ES6"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
