{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["//#lint:eslint", "//#lint:prettier", "//#lint:tsc"]
    },
    "//#lint:eslint": { "dependsOn": [] },
    "//#lint:prettier": { "dependsOn": [] },
    "//#lint:tsc": { "dependsOn": [] },
    "//#format": {
      "dependsOn": ["//#format:eslint", "//#format:prettier"]
    },
    "//#format:eslint": { "dependsOn": [] },
    "//#format:prettier": { "dependsOn": [] },
    "test": {
      "dependsOn": ["build", "//#test:vitest:ci", "//#test:playwright"]
    },
    "//#test:vitest:ci": { "dependsOn": [] },
    "//#test:playwright": { "dependsOn": [] }
  }
}
